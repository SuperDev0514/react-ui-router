{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "package",
    "lib",
    "src/components/__tests__",
    "src/__tests__"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}