{
  "moduleResolution": "node",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "outDir": ".",
    "sourceRoot": "_src",
    "rootDir": "_src"
  },
  "exclude": [
    "src/components/__tests__",
    "src/__tests__"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "rules": {
    "indent": [
      true,
      2
    ]
  }
}